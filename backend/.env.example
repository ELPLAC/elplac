
# ===== CONFIGURACIÓN DEL SERVIDOR =====
PORT=3000
NODE_ENV=production
# Límite de memoria para Node.js (en MB)
NODE_OPTIONS="--max-old-space-size=2048"

# ===== CONFIGURACIÓN DE BASE DE DATOS =====
DB_NAME=sarasa
DB_HOST=sarasa
DB_PORT=5432
DB_USERNAME=sarasa
DB_PASSWORD=sarasa

# ===== CONFIGURACIÓN DE POOL DE CONEXIONES =====
# Máximo número de conexiones simultáneas
DB_MAX_CONNECTIONS=20
# Mínimo número de conexiones activas
DB_MIN_CONNECTIONS=5
# Timeout de conexión en milisegundos
DB_CONNECTION_TIMEOUT=30000
# Timeout de inactividad en milisegundos
DB_IDLE_TIMEOUT=30000

# ===== AUTENTICACIÓN =====
JWT_SECRET=sarasa
GOOGLE_CLIENT_SECRET=sarasa
GOOGLE_CALLBACK_URL=sarasa
GOOGLE_CLIENT_ID=sarasa

# ===== CONFIGURACIÓN DE EMAIL =====
EMAIL=sarasa
EMAIL_PASSWORD=sarasa
EMAIL_HOST=sarasa
EMAIL_ADMIN=sarasa

# ===== CLOUDINARY (OPTIMIZACIÓN DE MEMORIA) =====
CLOUDINARY_NAME=sarasa
CLOUDINARY_KEY=sarasa
CLOUDINARY_SECRET=sarasa
# Límite de tamaño de imagen en MB
CLOUDINARY_MAX_FILE_SIZE=10
# Calidad de compresión (1-100)
CLOUDINARY_QUALITY=80

# ===== URLS =====
URL=sarasa
FRONTEND_URL=sarasa

# ===== MERCADO PAGO =====
MERCADOPAGO_PUBLIC_KEY=sarasa
MERCADOPAGO_ACCESS_TOKEN=sarasa

# ===== CONFIGURACIÓN DE LÍMITES DE MEMORIA =====
# Tamaño máximo de request body en MB
MAX_REQUEST_BODY_SIZE=10
# Tamaño máximo de archivo upload en MB
MAX_FILE_SIZE=5
# Número máximo de archivos por upload
MAX_FILES_PER_UPLOAD=10

# ===== CONFIGURACIÓN DE CACHE =====
# Duración del cache en segundos (30 minutos)
CACHE_DURATION=1800
# Tipo de cache (database, redis, ioredis, ioredis/cluster)
CACHE_TYPE=database

# ===== CONFIGURACIÓN DE LOGGING =====
# Nivel de logging (error, warn, log, debug, verbose)
LOG_LEVEL=warn
# Habilitar logs de queries SQL (solo desarrollo)
SQL_LOGGING=false

# ===== CONFIGURACIÓN DE TIMEOUTS =====
# Timeout del servidor HTTP en milisegundos (5 minutos)
SERVER_TIMEOUT=300000
# Timeout de keep-alive en milisegundos
KEEP_ALIVE_TIMEOUT=65000
# Timeout de headers en milisegundos
HEADERS_TIMEOUT=66000

# ===== CONFIGURACIÓN DE PAGINACIÓN =====
# Límite por defecto para paginación
DEFAULT_PAGE_SIZE=50
# Límite máximo para paginación
MAX_PAGE_SIZE=100

# ===== CONFIGURACIÓN DE MONITOREO =====
# Intervalo de monitoreo de memoria en milisegundos
MEMORY_MONITOR_INTERVAL=30000
# Habilitar garbage collection manual
ENABLE_MANUAL_GC=false